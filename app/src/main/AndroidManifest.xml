<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.supphawit.friend_trip"
    android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application

        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Friend-Trip"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.example.supphawit.friend_trip.config.GlideConfig"
            android:value="GlideModule"/>
        <activity android:name=".activity.CreateTripActivity">
        </activity>
        <activity android:name=".activity.SignInActivity">

        </activity>
        <activity android:name=".activity.SignUpActivity" />
        <activity android:name=".activity.DeveloperActivity" />
        <activity android:name=".activity.ViewProfileActivity" />
        <activity android:name=".activity.EditProfileActivity" />
        <activity android:name=".activity.TripListActivity">


        </activity>
        <activity android:name=".activity.FirstPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>