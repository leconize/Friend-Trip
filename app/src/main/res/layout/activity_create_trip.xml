<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_trip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.supphawit.friend_trip.activity.CreateTripActivity">
    <TextView android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TripName"
        />
    <EditText android:id="@+id/name_fill"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_label"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:ems="10" />
    <TextView android:id="@+id/place_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place"
        android:layout_below="@+id/name_fill"/>
    <EditText android:id="@+id/place_fill"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/place_label"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:ems="10"/>
    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_below="@+id/place_fill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <LinearLayout
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="maxPerson"
                android:gravity="top"

                />
            <EditText
                android:inputType="number"
                android:id="@+id/maxperson_fill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:maxLength="2"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/starttime_layout"
            android:layout_weight="0.8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/starttime_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="starttime"
                android:gravity="top"
                />
            <EditText
                android:id="@+id/starttime_fill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:focusableInTouchMode="false"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_2"
        android:layout_below="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <LinearLayout
            android:layout_weight="0.8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start/End Date"
                android:gravity="top"
                />
            <EditText
                android:id="@+id/date_fill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:focusableInTouchMode="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="endtime"
                android:gravity="top"
                />
            <EditText
                android:inputType="time"
                android:id="@+id/endtime_fill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:focusableInTouchMode="false"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_below="@+id/layout_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/description_label"
        />
    <EditText
        android:id="@+id/description_fill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_label"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="4"
        android:gravity="top"
        android:lines="4"/>

    <Button
        android:id="@+id/submit_btn"
        android:layout_below="@+id/description_fill"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"/>
</RelativeLayout>
