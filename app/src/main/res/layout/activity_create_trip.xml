<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:weightSum="1">

        <include layout="@layout/toolbar_layout" />

        <RelativeLayout
            android:id="@+id/activity_create_trip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.example.supphawit.friend_trip.activity.CreateTripActivity">

            <EditText
                android:id="@+id/name_fill"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/name_label"
                android:layout_marginBottom="20px"
                android:ellipsize="end"
                android:ems="10"
                android:maxLines="1"
                android:scrollHorizontally="true" />

            <TextView
                android:id="@+id/maxpeople_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_fill"
                android:text="Max People"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/maxpeople_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/maxpeople_lable"
                android:hint="1-99"
                android:inputType="number"
                android:maxLength="2" />


            <TextView
                android:id="@+id/place_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/maxpeople_fill"
                android:text="Place"
                android:textSize="20dp" />


            <LinearLayout
                android:id="@+id/place_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/place_label"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addplace_btn"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Start Date"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/start_date_fill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:focusableInTouchMode="false"
                        android:hint="dd/mm/yy"
                        android:inputType="date" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/start_time_fill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:focusableInTouchMode="false"
                        android:hint="hh:mm"
                        android:inputType="time" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="End Date"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/end_date_fill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:focusableInTouchMode="false"
                        android:hint="dd/mm/yy"
                        android:inputType="date" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/end_time_fill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:focusableInTouchMode="false"
                        android:hint="hh:mm"
                        android:inputType="time" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/end"
                android:layout_centerHorizontal="true"
                android:text="create trip" />

            <Button
                android:id="@+id/addplace_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/place_wrapper"
                android:text="Add new place" />

            <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Trip Name"
                android:textSize="20dp" />


        </RelativeLayout>
    </LinearLayout>

</ScrollView>

