<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.supphawit.friend_trip.activity.EditProfileActivity"
    android:layout_margin="15dp"
    android:gravity="center"
    android:scrollbars="none"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editprofile_username_label"
            android:textSize="10pt"
            android:text="Email"/>
        <EditText
            android:textSize="8pt"
            android:layout_width="match_parent"
            android:layout_below="@+id/editprofile_username_label"
            android:layout_height="wrap_content"
            android:id="@+id/editprofile_username_fill"/>

        <TextView
            android:layout_below="@+id/editprofile_username_fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nickname"
            android:textSize="10pt"
            android:id="@+id/editprofile_nickname_label"/>
        <EditText
            android:textSize="8pt"
            android:layout_below="@id/editprofile_nickname_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editprofile_nickname_fill"/>
        <LinearLayout
            android:id="@+id/sex_birthdayline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_below="@+id/editprofile_nickname_fill">

            <LinearLayout
                android:layout_weight="0.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:text="Sex"/>
                <Spinner
                    android:gravity="center_vertical"
                    android:textSize="8pt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/editprofile_gender_spinner">
                </Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="10pt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile"/>
                <EditText
                    android:textSize="8pt"
                    android:id="@+id/editprofile_mobile_fill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/editprfile_address_label"
            android:layout_below="@+id/sex_birthdayline"
            android:text="Address"
            android:textSize="10pt"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editprofile_address_fill"
            android:textSize="8pt"
            android:layout_below="@+id/editprfile_address_label"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
            android:textSize="10pt"
        android:id="@+id/editprofile_firstname_label"
        android:layout_below="@+id/editprofile_address_fill"/>
        <EditText
            android:textSize="8pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editprofile_firstname_fill"
            android:layout_below="@+id/editprofile_firstname_label"/>
        <TextView
            android:textSize="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:id="@+id/editprofile_lastname_label"
            android:layout_below="@+id/editprofile_firstname_fill"/>
        <EditText
            android:textSize="8pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editprofile_lastname_fill"
            android:layout_below="@+id/editprofile_lastname_label"/>

        <Button
            android:layout_marginTop="40px"
            android:layout_below="@+id/editprofile_lastname_fill"
            android:layout_width="match_parent"
            android:id="@+id/editprofile_confirm"
            android:text="confirm"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="#ffbf00"
            />

    </RelativeLayout>

</ScrollView>